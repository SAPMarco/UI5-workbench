<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      title="Name your save"
      titleAlignment="Center"
      verticalScrolling="false"
      horizontalScrolling="false">
        <FlexBox direction="Row" justifyContent="Center">
            <FlexBox direction="Column">
                <FlexBox direction="Row" justifyContent="Start">
                    <Input id="saveDlgInput" placeholder="save as ..."></Input>
                </FlexBox>
            </FlexBox>
        </FlexBox>
        <beginButton>
            <Button text="Save" press="onSaveDialogSave"/>
        </beginButton>
        <endButton>        
            <Button text="Cancel" press="onSaveDialogCancel"/>
        </endButton>
   </Dialog>
</core:FragmentDefinition>